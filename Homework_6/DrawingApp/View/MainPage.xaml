<Page
    x:Class="DrawingApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrawingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="_clearButton" Content="Clear" HorizontalAlignment="Stretch"
Height="44" Margin="1121,48,99,0" VerticalAlignment="Top" Click="HandleClearButtonClick"/>
        <Button x:Name="_triangleButton" Content="Triangle" HorizontalAlignment="Stretch"
Height="44" Margin="610,48,610,0" VerticalAlignment="Top" Click="HandleTriangleButtonClick" IsEnabled="{x:Bind Path=_presentationModel.IsTriangleButtonEnabled, Mode=OneWay}"/>
        <Button x:Name="_rectangleButton" Content="Rectangle" HorizontalAlignment="Stretch"
Height="44" Margin="99,48,1121,0" VerticalAlignment="Top" Click="HandleRectangleButtonClick" IsEnabled="{x:Bind Path=_presentationModel.IsRectangleButtonEnabled, Mode=OneWay}"/>
        <Canvas x:Name="_canvas" Margin="0,138,0,0" Background="#FFFFFFA0"/>
    </Grid>
</Page>
